{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "blocktheme/section-recent-posts",
    "title": "Section Articles Récents",
    "category": "theme",
    "icon": "grid-view",
    "description": "Section affichant les articles récents avec pagination",
    "supports": {
        "html": false,
        "anchor": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "default": "Articles Récents"
        },
        "postsPerPage": {
            "type": "number",
            "default": 10
        },
        "showExcerpt": {
            "type": "boolean",
            "default": true
        }
    },
    "textdomain": "blocktheme",
    "editorScript": "file:../../../build/index.js",
    "style": "file:./section-recent-posts.css",
    "render": "file:./section-recent-posts.php"
} 